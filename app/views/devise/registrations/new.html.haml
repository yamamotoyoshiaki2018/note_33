#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner-top.account-page__header
      %h2 note
    .account-page__inner-bottom.user-form
      %h4 noteに登録する
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = "ニックネーム（登録後に変更可能）"
          .field-input
            = f.text_field :name, autofocus: true, placeholder: "例：ノート君"
        .field
          .field-label
            = "メールアドレス"
          .field-input
            = f.email_field :email, placeholder: "例：mail@note.mu"
        .field
          .field-label
            = "パスワード"
          .field-input
            = f.password_field :password, autocomplete: "off", placeholder: "6文字以上の半角英数"
        .field
          .field-label
            = "パスワード再入力"
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "もう一度入力"
        .actions
          = f.submit "登録する(無料)", class: 'btn'
      %h5
        %a.link-green{href: "/users/sign_in"} ログイン
      %h5
        cakesアカウントをお持ちの方は
        %a.link-green{href: "/users/sign_in"} こちら



