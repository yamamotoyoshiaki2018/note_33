            %p
              = text_field_tag :search, params[:search]
              = submit_tag "Search", :name => nil

        .user-serch__result
          - @users.each do |user|
            .user-serch__result__icons
              - if user.avatar_image?
                %ul.avatar
                  %li.avatar
                  = image_tag user.avatar_image, size: "100x100"
                  %li.name
                  = link_to user.name, user_path(user.id)
                  / , class: "user-serch__result__icons__name"
              - else
                %ul.smile
                  %li.smile
                  = fa_icon ("smile 5x")
                  %li.name
                  = link_to user.name, user_path(user.id)
                  / , class: "user-serch__result__icons__name"


