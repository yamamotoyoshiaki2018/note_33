.wrapper
  .header
    .header__upper
      .header__upper__logo
        = link_to  root_path do
          %img{:alt => "note", :src => "https://d2l930y2yx77uc.cloudfront.net/assets/renewal/logo-b84a1f9687168286cb1ca588b5aa4d761cd3f46e79d4ac36f0d331dfb1ed21ba.svg"}/
      %ul.header__upper__lists
        %li
          %form.header__upper__lists__note-botton{:action => "/post_texts/new", :method => "get"}
            %input.header__upper__lists__note-botton__submit{:type => "submit", :value => "ノートを投稿"}/
        %li
          .header__upper__lists__user-icon
            %ul.nav
              %li.header__upper__lists__user-icon__smile
                = fa_icon ("smile 3x")
                %ul
                  %li
                    = link_to "マイページ", root_path,:style=>"color:white;"
                  %li
                    = link_to "ノート一覧", post_texts_path,:style=>"color:white;"
                  %li
                    = link_to "マガジン一覧", root_path,:style=>"color:white;"
                  %li
                    = link_to "画像一覧", root_path,:style=>"color:white;"
                  %li
                    = link_to "アカウント設定", edit_user_registration_path,:style=>"color:white;"
                  %li
                    = link_to "ログアウト", destroy_user_session_path,:style=>"color:#787c7b;", :method => :delete,:style=>"color:white;"
        %li
          %form.header__upper__lists__search{:action => "#", :method => "get"}
            %input.header__upper__lists__search__text{:placeholder => "キーワードや作品名で検索", :size => "25", :type => "text"}/
            %input.header__upper__lists__search__botton{:type => "submit", :value => "🔍"}/

  .contents
    .contents__container
      .contents__container__top
        .contents__container__top__icon
          = fa_icon ("smile 2x")
        %ul
          %li
            .contents__container__top__nickname
              = @post_text.user.name
            .contents__container__top__date
              = @post_text.created_at.strftime("%Y年%m月%d日 %H時%M分")

      .contents__container__center
        .contents__container__center__headerimg
          - if @post_text.header_image.present?
            = image_tag @post_text.header_image, size: "580x300", alt: ""
        .contents__container__center__title
          = @post_text.title
        .contents__container__center__text
          - if @post_text.text.present?
            = @post_text.text
        .contents__container__center__img
          - if @post_text.image.present?
            = image_tag @post_text.image, size: "470x300", alt: "" , :class =>".contents__container__center__img__2nd"
        .contents__container__center__bottom
          .contents__container__center__bottom__left
            %ul
              %li
                = fa_icon ("heart 2x")
              %li
                = fa_icon ("arrow-right 2x")
              %li
                = fa_icon ("plus 2x")

    .contents__comment
      - if current_user
        = form_tag("/post_texts/#{@post_text.id}/comments",  method: :post,  id: "new_comment" ) do
          %ul
            %li
              %textarea.contents__comment__text{:cols => "30", :name => "text", :placeholder => "コメントする", :rows => "2"}
            %li
              %input.contents__comment__botton{:type => "submit", :value => "comment"}/

            .contents__comment__index
              %h4 ＜コメント一覧＞
              - if @comments
                - @comments.each do |comment|
                  %p
                    %strong.contents__comment__index__text
                      = link_to comment.user.name, "/users/#{comment.user_id}",:style=>"color:#2cb696;"
                      ：
                    = comment.text
                    .contents__comment__index__delete
                    - if comment.user == current_user
                      %p= link_to '削除', post_text_comment_path(comment.post_text_id, comment.id), method: :delete, remote: true

